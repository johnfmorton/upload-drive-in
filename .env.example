#------------------------------------------------------------------------------
# Core Application
#------------------------------------------------------------------------------

APP_NAME="Upload Drive-In"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Company/branding
COMPANY_NAME="Your Company Name"
APP_BRANDING_COLOR="#1b4cc3"

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# System
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

#------------------------------------------------------------------------------
# Database
#------------------------------------------------------------------------------

DB_CONNECTION=sqlite
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=

#------------------------------------------------------------------------------
# Session
#------------------------------------------------------------------------------
# For detailed session security documentation, see:
# https://laravel.com/docs/session

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# SESSION_SECURE_COOKIE: Send cookies only over HTTPS
# - Set to "true" for HTTPS (production)
# - Set to "false" for HTTP (local development)
# - Leave empty for auto-detection from APP_URL
SESSION_SECURE_COOKIE=

# SESSION_SAME_SITE: CSRF protection via cross-site cookie policy
# Options: "lax" (recommended), "strict", "none" (requires HTTPS)
SESSION_SAME_SITE=lax

# SESSION_HTTP_ONLY: Prevent JavaScript access to cookies (XSS protection)
SESSION_HTTP_ONLY=true

# SESSION_PARTITIONED_COOKIE: Ties cookies to top-level site (advanced)
SESSION_PARTITIONED_COOKIE=false

#------------------------------------------------------------------------------
# Cache, Queue & Filesystem
#------------------------------------------------------------------------------

CACHE_STORE=database
QUEUE_CONNECTION=database
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

#------------------------------------------------------------------------------
# Redis (Optional)
#------------------------------------------------------------------------------
# Required if using redis for cache, queue, or session

REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

#------------------------------------------------------------------------------
# Mail
#------------------------------------------------------------------------------

MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

#------------------------------------------------------------------------------
# Logging
#------------------------------------------------------------------------------

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

#------------------------------------------------------------------------------
# Cloud Storage - Google Drive
#------------------------------------------------------------------------------
# OAuth credentials from Google Cloud Console

GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=

#------------------------------------------------------------------------------
# Cloud Storage - Amazon S3
#------------------------------------------------------------------------------

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# Optional: Base folder path within S3 bucket for organizing uploaded files
# Leave empty to upload to bucket root. Do not include leading or trailing slashes.
# Example: uploads/client-files
AWS_FOLDER_PATH=
AWS_USE_PATH_STYLE_ENDPOINT=false

#------------------------------------------------------------------------------
# Cloud Storage - Microsoft Teams (Coming Soon)
#------------------------------------------------------------------------------

MICROSOFT_TEAMS_CLIENT_ID=
MICROSOFT_TEAMS_CLIENT_SECRET=

#------------------------------------------------------------------------------
# Cloud Storage Settings
#------------------------------------------------------------------------------

# Default provider: google-drive, amazon-s3, microsoft-teams
CLOUD_STORAGE_DEFAULT=google-drive

#------------------------------------------------------------------------------
# Frontend Build
#------------------------------------------------------------------------------

VITE_APP_NAME="${APP_NAME}"
VITE_DEV_SERVER_URL="http://localhost:3001"

#------------------------------------------------------------------------------
# Application Setup
#------------------------------------------------------------------------------
# Controls the initial setup wizard

# Enable/disable setup wizard access
APP_SETUP_ENABLED=true

# Rate limiting for queue worker tests during setup
SETUP_QUEUE_TEST_MAX_ATTEMPTS=5
SETUP_QUEUE_TEST_DECAY_MINUTES=15
SETUP_QUEUE_TEST_COOLDOWN_SECONDS=30

#------------------------------------------------------------------------------
# File Manager
#------------------------------------------------------------------------------

# Items displayed per page (valid range: 1-100)
FILE_MANAGER_ITEMS_PER_PAGE=10

#------------------------------------------------------------------------------
# Advanced - Upload System
#------------------------------------------------------------------------------
# See config/upload.php for detailed documentation

# Disk space management (values in bytes)
# UPLOAD_MIN_FREE_SPACE=2147483648        # 2GB minimum free space
# UPLOAD_WARNING_THRESHOLD=5368709120      # 5GB warning threshold
# UPLOAD_EMERGENCY_CLEANUP=true
# UPLOAD_EMERGENCY_CLEANUP_MAX_AGE=1       # hours

# File limits (values in bytes)
# UPLOAD_MAX_FILE_SIZE=5368709120          # 5GB max file size
# UPLOAD_CHUNK_SIZE=5242880                # 5MB chunk size
# UPLOAD_MAX_CONCURRENT=20                 # max concurrent uploads

# Cleanup settings
# UPLOAD_CLEANUP_DEFAULT_HOURS=24
# UPLOAD_AUTO_CLEANUP=true
# UPLOAD_FAILED_CLEANUP_HOURS=72

#------------------------------------------------------------------------------
# Advanced - Upload Recovery
#------------------------------------------------------------------------------
# See config/upload-recovery.php for detailed documentation

# Retry limits
# UPLOAD_RECOVERY_MAX_RETRY_ATTEMPTS=3
# UPLOAD_RECOVERY_MAX_RECOVERY_ATTEMPTS=5

# Timing
# UPLOAD_RECOVERY_STUCK_THRESHOLD_MINUTES=30
# UPLOAD_RECOVERY_RETRY_BATCH_SIZE=10
# UPLOAD_RECOVERY_RETRY_BATCH_DELAY=30     # seconds

# Recovery strategies
# UPLOAD_RECOVERY_TOKEN_REFRESH_ENABLED=true
# UPLOAD_RECOVERY_TOKEN_REFRESH_MAX_ATTEMPTS=3
# UPLOAD_RECOVERY_TOKEN_REFRESH_DELAY=30

# UPLOAD_RECOVERY_NETWORK_RETRY_ENABLED=true
# UPLOAD_RECOVERY_NETWORK_RETRY_MAX_ATTEMPTS=5
# UPLOAD_RECOVERY_NETWORK_RETRY_DELAY=60

# UPLOAD_RECOVERY_QUOTA_WAIT_ENABLED=true
# UPLOAD_RECOVERY_QUOTA_WAIT_MAX_ATTEMPTS=3
# UPLOAD_RECOVERY_QUOTA_WAIT_DELAY=3600    # 1 hour

# UPLOAD_RECOVERY_SERVICE_RETRY_ENABLED=true
# UPLOAD_RECOVERY_SERVICE_RETRY_MAX_ATTEMPTS=3
# UPLOAD_RECOVERY_SERVICE_RETRY_DELAY=300  # 5 minutes

# Notifications
# UPLOAD_RECOVERY_NOTIFY_SUCCESS=true
# UPLOAD_RECOVERY_NOTIFY_FAILURE=true
# UPLOAD_RECOVERY_NOTIFY_RETRY_EXHAUSTED=true

# Queue settings
# UPLOAD_RECOVERY_QUEUE=recovery
# UPLOAD_RECOVERY_RETRY_QUEUE=recovery
# UPLOAD_RECOVERY_HIGH_PRIORITY_QUEUE=high

# Monitoring
# UPLOAD_RECOVERY_LOG_ATTEMPTS=true
# UPLOAD_RECOVERY_LOG_RETRY_DECISIONS=true
# UPLOAD_RECOVERY_TRACK_SUCCESS_RATES=true
