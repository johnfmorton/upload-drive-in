# Cloud Storage Provider Configuration
# Copy the relevant sections to your .env file and update with your credentials

# =============================================================================
# GENERAL CLOUD STORAGE SETTINGS
# =============================================================================
CLOUD_STORAGE_DEFAULT=google-drive
CLOUD_STORAGE_FALLBACK_ENABLED=true
CLOUD_STORAGE_HEALTH_CHECK_ENABLED=true
CLOUD_STORAGE_HEALTH_CHECK_INTERVAL=300
CLOUD_STORAGE_LOGGING_ENABLED=true
CLOUD_STORAGE_CACHE_ENABLED=true

# =============================================================================
# GOOGLE DRIVE CONFIGURATION
# =============================================================================
GOOGLE_DRIVE_ENABLED=true
GOOGLE_DRIVE_CLIENT_ID=your_google_client_id_here
GOOGLE_DRIVE_CLIENT_SECRET=your_google_client_secret_here

# Optional Google Drive settings
# GOOGLE_DRIVE_ROOT_FOLDER_ID=root

# =============================================================================
# AMAZON S3 CONFIGURATION
# =============================================================================
AWS_S3_ENABLED=false
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your_s3_bucket_name

# Optional S3 settings
# AWS_ENDPOINT=https://s3.amazonaws.com
# AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# AZURE BLOB STORAGE CONFIGURATION
# =============================================================================
AZURE_STORAGE_ENABLED=false
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string_here
AZURE_STORAGE_CONTAINER=uploads

# Alternative Azure authentication (instead of connection string)
# AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
# AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key
# AZURE_STORAGE_ENDPOINT_SUFFIX=core.windows.net

# =============================================================================
# MICROSOFT TEAMS / SHAREPOINT CONFIGURATION
# =============================================================================
MICROSOFT_TEAMS_ENABLED=false
MICROSOFT_TEAMS_CLIENT_ID=your_teams_client_id_here
MICROSOFT_TEAMS_CLIENT_SECRET=your_teams_client_secret_here
MICROSOFT_TEAMS_TENANT_ID=your_tenant_id_here

# =============================================================================
# DROPBOX CONFIGURATION
# =============================================================================
DROPBOX_ENABLED=false
DROPBOX_CLIENT_ID=your_dropbox_app_key_here
DROPBOX_CLIENT_SECRET=your_dropbox_app_secret_here

# =============================================================================
# MIGRATION SETTINGS
# =============================================================================
CLOUD_STORAGE_AUTO_MIGRATE=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
CLOUD_STORAGE_LOG_LEVEL=info

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CLOUD_STORAGE_CACHE_TTL=3600

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
CLOUD_STORAGE_HEALTH_CHECK_TIMEOUT=30