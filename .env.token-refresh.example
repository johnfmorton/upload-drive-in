# Token Refresh Configuration Environment Variables
# Copy these to your .env file and adjust values as needed

# Feature Flags
TOKEN_REFRESH_PROACTIVE_ENABLED=true
TOKEN_REFRESH_LIVE_VALIDATION_ENABLED=true
TOKEN_REFRESH_AUTO_RECOVERY_ENABLED=true
TOKEN_REFRESH_BACKGROUND_MAINTENANCE_ENABLED=true
TOKEN_REFRESH_HEALTH_MONITORING_ENABLED=true
TOKEN_REFRESH_ENHANCED_DASHBOARD_ENABLED=true
TOKEN_REFRESH_ENHANCED_LOGGING_ENABLED=true

# Timing Configuration
TOKEN_REFRESH_PROACTIVE_MINUTES=15
TOKEN_REFRESH_BACKGROUND_MINUTES=30
TOKEN_REFRESH_RETRY_BASE_DELAY=1
TOKEN_REFRESH_MAX_RETRIES=5
TOKEN_REFRESH_LOCK_TTL=30
TOKEN_REFRESH_HEALTH_CACHE_HEALTHY=30
TOKEN_REFRESH_HEALTH_CACHE_ERROR=10

# Notification Configuration
TOKEN_REFRESH_NOTIFICATIONS_ENABLED=true
TOKEN_REFRESH_NOTIFICATION_THROTTLE_HOURS=24
TOKEN_REFRESH_ESCALATE_TO_ADMIN=true
TOKEN_REFRESH_MAX_NOTIFICATION_FAILURES=3

# Rate Limiting Configuration
TOKEN_REFRESH_MAX_ATTEMPTS_PER_HOUR=5
TOKEN_REFRESH_MAX_HEALTH_CHECKS_PER_MINUTE=10
TOKEN_REFRESH_IP_RATE_LIMITING=true
TOKEN_REFRESH_MAX_IP_REQUESTS_PER_HOUR=100

# Security Configuration
TOKEN_REFRESH_TOKEN_ROTATION=true
TOKEN_REFRESH_AUDIT_LOGGING=true
TOKEN_REFRESH_SECURITY_LOG_LEVEL=info
TOKEN_REFRESH_DETAILED_ERROR_LOGGING=true

# Monitoring Configuration
TOKEN_REFRESH_COLLECT_METRICS=true
TOKEN_REFRESH_FAILURE_RATE_THRESHOLD=10
TOKEN_REFRESH_CACHE_MISS_THRESHOLD=50
TOKEN_REFRESH_AVG_TIME_THRESHOLD=5
TOKEN_REFRESH_PENDING_UPLOADS_THRESHOLD=100
TOKEN_REFRESH_METRICS_RETENTION_DAYS=30

# Admin Interface Configuration
TOKEN_REFRESH_ADMIN_INTERFACE_ENABLED=true
TOKEN_REFRESH_ALLOW_RUNTIME_CHANGES=false

# Environment-Specific Settings
# These override the default configuration based on APP_ENV

# Local Development Settings
# - Shorter refresh times for testing
# - Disabled background maintenance to avoid interference
# - Shorter cache TTL for faster feedback
# - Shorter notification throttle for testing

# Testing Environment Settings
# - All features disabled for predictable tests
# - No notifications sent during tests

# Staging Environment Settings
# - Gradual rollout with some features disabled
# - More aggressive refresh timing for testing

# Production Environment Settings
# - All features enabled
# - Default timing and notification settings
# - Full monitoring and logging enabled